{
  "name": "SnapSummary - AI-Powered Content Summaries",
  "version": "1.0.0",
  "manifest_version": 3,
  "description": "Generate AI-powered summary cards from YouTube videos, articles, and web content",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["sidePanel", "tabs", "activeTab", "scripting", "storage"],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["images/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "minimum_chrome_version": "138",
  "side_panel": {
    "default_path": "sidepanel/index.html"
  },
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "default_title": "Open SnapSummary"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://www.googleapis.com"
  }
}

